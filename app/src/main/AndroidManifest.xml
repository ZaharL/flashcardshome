<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learningstarz.myflashcards" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/CommonTheme">

        <activity
            android:name=".ui.activities.FirstActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.FirstActivity" />
        </activity>
        <activity
            android:name=".ui.activities.EditCardActivity"
            android:label="@string/title_activity_edit_card"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".ui.activities.ChooseClass"
            android:label="@string/choose_class_title"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.FirstActivity" />
        </activity>
        <activity
            android:name=".ui.activities.MyDeckActivity"
            android:label="@string/my_deck_title"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activities.FirstActivity" />
        </activity>
    </application>

</manifest>
